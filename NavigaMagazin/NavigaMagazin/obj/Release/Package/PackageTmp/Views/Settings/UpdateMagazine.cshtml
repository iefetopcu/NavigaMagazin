@model NavigaMagazin.Models.Entity.magazineTable
@{
    ViewBag.Title = "UpdateMagazine";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-6 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Yeni Aylık Dergi Ekle</span>
    </div>



</div>
<hr />
<script src="https://cdn.ckeditor.com/4.15.1/full/ckeditor.js"></script>

<div class="main-content-container container-fluid px-4">

    @using (Html.BeginForm("UpdateMagazine", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">

            <div class="col-lg-9 col-md-12">
                <div class="card card-small mb-3">
                    <div class="card-body">


                        @Html.TextBoxFor(m => m.magazinetitle, new { @class = "form-control form-control-lg mb-3", @maxlength = "65" })
                        <div class="add-new-post__editor mb-1">
                            <label>İçerik</label>
                            <textarea name="postcontent">@Model.magazinecontent</textarea><br /><br />
                            <script>
                                CKEDITOR.replace('postcontent');
                            </script>

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-12">
                <div class='card card-small mb-3'>
                    <div class="card-header border-bottom">
                        <h6 class="m-0">Detaylar ve Fotoğraf</h6>
                    </div>
                    <div class='card-body p-0'>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item p-3">



                                <span class="d-flex mb-2">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <strong class="mr-1">İçerik Fotoğrafı<br /></strong>
                                            <img src="@Model.coverphoto" style="width:100%!important; padding:20px;" />
                                        </div>
                                        <div class="col-lg-6">
                                            <strong class="ml-1">
                                                <input type="file" name="coverphoto" required />
                                            </strong>
                                        </div>
                                    </div>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class='card card-small mb-3'>
                    <div class="card-header border-bottom">
                        <h6 class="m-0">Tarih</h6>
                    </div>
                    <div class='card-body p-0'>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item p-3">


                                <span class="d-flex mb-2">
                                    <i class="material-icons mr-1">calendar_today</i>
                                    <strong class="mr-1">Dergi Yayınlanma Tarihi </strong>
                                    <input type="text" id="datepicker" name="magazinetime" required="required" class="ml-auto" value="@Model.magazinetime"><br />
                                </span>

                            </li>
                            <li class="list-group-item d-flex px-3">

                                <button class="btn btn-sm btn-accent ml-auto">
                                    <i class="material-icons">file_copy</i> Kaydet
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    }
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>

</div>



<script>


    $(function () {


        $("#datepicker").datepicker({
            dateFormat: 'yy-mm-dd'
        }).datepicker();
        ;
    });


</script>


