@using NavigaMagazin.Models.Entity
@foreach (var urunler in Model)
{

    <div class="col-xs-6 col-sm-6 col-md-6 col-padding">
        <div class="grid-item">
            <div class="grid-item-img">
                <a href="@Url.Action("Oku","Home", new { url = urunler.url })">
                    <img src="@urunler.postphoto" class="img-responsive" alt="@urunler.posttitle">
                    @*<div class="link-icon"><i class="fa fa-camera"></i></div>*@
                </a>
            </div>
            <h5><a href="@Url.Action("Oku","Home", new { url = urunler.url })" class="title">@urunler.posttitle</a></h5>
            <ul class="authar-info">
                <li>@urunler.releasetime.ToString("dd.MM.yyyy")</li>
                <li class="like hidden-sm">@urunler.postlike</li>
            </ul>
            <p>@urunler.postspottext</p>
        </div>
    </div>

}


