@using NavigaMagazin.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<UserTable>

@{
    ViewBag.Title = "ApprovalRequest";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Onay Bekleyen Kullanıcılar</span>
    </div>

    
</div>
<hr />
<div class="row">
    @foreach (var users in Model)
    {
        <div class="col-lg-3">
            <div class="card card-small mb-4 pt-3">
                <div class="card-header border-bottom text-center">
                    <div class="mb-3 mx-auto">
                        <img class="rounded-circle" src="@users.userphoto" alt="User Avatar" width="110" height="150">
                    </div>
                    <h4 class="mb-2">@users.username @users.usersurname</h4>

                    <a href="@Url.Action("ViewUser", "User" , new { id = users.id })" >
                        <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2">
                            <i class="material-icons mr-1"></i>Görüntüle
                        </button>
                    </a>
                    
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-4">
                        <div class="progress-wrapper">
                            <strong class="text-muted d-block mb-2 text-center">@users.UserRoleTable.rolename</strong>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }

</div>




<div class="row">

    <div class="col-lg-12 text-center">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    </div>
</div>


