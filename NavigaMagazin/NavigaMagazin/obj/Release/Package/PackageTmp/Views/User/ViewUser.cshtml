@model NavigaMagazin.Models.Entity.UserTable
@{
    ViewBag.Title = "ViewUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">@Model.username @Model.usersurname Kullanıcı İncelemesi</span>
    </div>


</div>
<hr />

<div class="row">
    <div class="col-lg-4">
        <div class="card card-small mb-4 pt-3">
            <div class="card-header border-bottom text-center">
                <div class="mb-3 mx-auto">
                    <img class="rounded-circle" src="@Model.userphoto" alt="User Avatar" width="110">
                </div>
                <h4 class="mb-0">@Model.username @Model.usersurname</h4><br />
                <span class="text-muted d-block mb-2"><b>Kayıt Tarihi : </b>@Model.creationtime.Value.ToString("dd.MM.yyyy")</span>
                <span class="text-muted d-block mb-2"><b>Yorum Sayısı : </b>@ViewBag.usercomment</span>

                <a href="@Url.Action("Confirm", "User" , new {id = Model.id})">
                    <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2">
                        <i class="material-icons mr-1">done</i> ONAYLA
                    </button>
                </a>

                <a href="@Url.Action("Reject", "User" , new {id = Model.id})">
                    <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2">
                        <i class="material-icons mr-1">close</i> REDDET
                    </button>
                </a>
                <br />
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="page-header row no-gutters py-4">
            <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
                <span class="text-uppercase page-subtitle">@Model.username @Model.usersurname Kullanıcı Yorumları</span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @foreach (var comment in Model.CommentTables)
                {
                    <h4>@comment.commenttitle</h4>

                    <p>@comment.commentcontent</p>
                    <p>@comment.commenttime.Value.ToString("dd.MM.yyyy")</p>
                    <hr />
                }

            </div>
        </div>
    </div>
</div>