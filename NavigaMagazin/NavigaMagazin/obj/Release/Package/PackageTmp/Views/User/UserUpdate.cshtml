@model NavigaMagazin.Models.Entity.UserTable
@{
    ViewBag.Title = "UserUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Kullanıcı Yönetimi</span>
    </div>

</div>

@using (Html.BeginForm("UserUpdate", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    <div class="main-content-container container-fluid px-12">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="card card-small mb-9">
                    <div class="card-body">
                        <label>Kullanıcı Adı</label>
                        @Html.TextBoxFor(m => m.username, new { @class = "form-control form-control-lg mb-3", @maxlength = "25" })
                        <label>Kullanıcı Soyadı</label>
                        @Html.TextBoxFor(m => m.usersurname, new { @class = "form-control form-control-lg mb-3", @maxlength = "25" })
                        <label>Kullanıcı E-Mail</label>
                        @Html.TextBoxFor(m => m.useremail, new { @class = "form-control form-control-lg mb-3", @maxlength = "45"})
                        <label>Kullanıcı Şifresi</label>
                        @Html.TextBoxFor(m => m.userpassword, new { @class = "form-control form-control-lg mb-3", @maxlength = "45", @type = "password" })


                    </div>
                </div><br /><br />
                <div class="card card-small mb-9">
                    <div class="card-body">
                        <label>Kullanıcı Facebook Adresi</label>
                        @Html.TextBoxFor(m => m.userfacebook, new { @class = "form-control form-control-lg mb-3" })
                    <label>Kullanıcı Twitter Adresi</label>
                        @Html.TextBoxFor(m => m.usertwitter, new { @class = "form-control form-control-lg mb-3" })
                    <label>Kullanıcı Youtube Adresi</label>
                        @Html.TextBoxFor(m => m.useryoutube, new { @class = "form-control form-control-lg mb-3" })
                    <label>Kullanıcı Linkedin Adresi</label>
                        @Html.TextBoxFor(m => m.userlinkedin, new { @class = "form-control form-control-lg mb-3" })


                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class='card card-small mb-3'>
                    <div class="card-header border-bottom">
                        <h6 class="m-0">Fotoğraf ve Rol</h6>
                    </div>
                    <div class='card-body p-0'>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item p-3">
                                <span class="d-flex mb-2">
                                    <i class="material-icons mr-1">border_color</i>
                                    <strong class="mr-1">Rol </strong>
                                    @Html.DropDownListFor(m => m.userroleid, (List<SelectListItem>)ViewBag.roles, new { @class = "ml-auto" })
                                </span>
                                <span class="d-flex mb-2">
                                    <i class="material-icons mr-1">done</i>
                                    <strong class="mr-1">Hesap</strong>
                                    @if (Model.approved == "true")
                                    {
                                <input type="checkbox" name="approved" value="true" checked class="ml-auto"> <label style="margin-left:20px;"> <b>Onaylı Hesap</b></label>
                                    }
                                    else { 
                                <input type="checkbox" name="approved" value="true" class="ml-auto"> <label style="margin-left:20px;"> <b>Onaylı Hesap</b></label>
                                    }

                                </span>
                                <span class="d-flex mb-2">

                                    <strong class="ml-1">
                                        <img src="@Model.userphoto" style="width:70%!important; padding:10px;" /><br />
                                        Fotoğrafı Değiştir<br />
                                        <input type="file" name="userphoto" />
                                    </strong>
                                </span>
                            </li>
                            <li class="list-group-item d-flex px-3">
                                <button class="btn btn-sm btn-accent ml-auto">
                                    <i class="material-icons">file_copy</i> Kaydet
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
