@using NavigaMagazin.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<magazineTable>
@{
    ViewBag.Title = "Dergi";
    ViewBag.Description = "Naviga Magazin Dergi İçerikleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <h1><strong>Dergi</strong></h1>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                    <li class="active"><a href="@Url.Action("Dergi", "Home")">Dergi</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<main class="page_main_wrapper">

    <div class="container">
        <div class="row row-m">
            <!-- START MAIN CONTENT -->
            <div class="col-sm-8 col-p  main-content">
                <div class="theiaStickySidebar">
                    <div class="post-inner categoty-style-1">
                        <!-- post body -->
                        <div class="post-body">
                            <div class="row row-m">
                                @foreach (var magazine in Model)
                                {
                                    <div class="col-sm-6 col-p">
                                        <article>
                                            <figure>
                                                <a href="@Url.Action("AylikDergi","Home", new { url = magazine.url })"><img src="@magazine.coverphoto" height="242" width="345" class="img-responsive"></a>
                                                
                                            </figure>
                                            <div class="post-info">
                                                <h3><a href="@Url.Action("AylikDergi","Home", new { url = magazine.url })">@magazine.magazinetitle</a></h3>
                                                <ul class="authar-info">
                                                    <li><i class="ti-timer"></i> @magazine.magazinetime.Value.ToString("dd.MM.yyyy")</li>
                                                    
                                                </ul>
                                            </div>
                                        </article>
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- Post footer -->
                        <div class="post-footer">
                            <div class="row thm-margin">
                                <div class="col-xs-12 col-sm-12 col-md-12 thm-padding">
                                    <!-- pagination -->
                                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page })) <!-- /.pagination -->
                                </div>
                            </div>
                        </div> <!-- /.Post footer-->
                    </div>
                </div>
            </div>
            <!-- END OF /. MAIN CONTENT -->
            <!-- START SIDE CONTENT -->
            @{Html.RenderAction("Sidecontent", "Partial");}
            <!-- END OF /. SIDE CONTENT -->
        </div>
    </div>
</main>


