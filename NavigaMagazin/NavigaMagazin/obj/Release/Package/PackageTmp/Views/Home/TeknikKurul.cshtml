@using NavigaMagazin.Models.Entity

@{
    ViewBag.Title = "TeknikKurul";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h1><strong>Teknik Kurul</strong></h1>
            </div>
        </div>
    </div>
</div>
@{Html.RenderAction("TeknikKurul", "Partial");}
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h1><strong>Sorular</strong></h1>
            </div>
        </div>
    </div>
</div>
<div class="main-content-container container-fluid px-4">

    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-md-12">
                
                <div class="panel-group" id="accordion" role="tablist">
                    @foreach (var question in Model)
                    {
                        <div class="panel">
                            <div class="panel-heading" role="tab" id="headingTwo">
                                <h4 class="panel-title">
                                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#@question.id" aria-controls="collapseTwo">
                                        @question.questiontitle
                                    </a>
                                </h4>
                            </div>
                            <div id="@question.id" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                <div class="panel-body">
                                    <h5>Soru</h5>
                                    <h6>Soruyu Soran Kullanıcı - @question.UserTable.username @question.UserTable.usersurname</h6>
                                    <p style="margin-left:20px;">
                                        @question.questioncontent
                                    </p>
                                    <h5>Cevap</h5>
                                    <h6>Cevaplayan Uzman - @question.UserTable1.username @question.UserTable1.usersurname </h6>
                                    <p style="margin-left:20px;">
                                        @question.questionanswer
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- end of panel -->

                </div>
            </div>
            @{Html.RenderAction("Sidecontent", "Partial");}
        </div>
    </div>


</div>