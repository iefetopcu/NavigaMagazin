@using NavigaMagazin.Models.Entity

    @{
        ViewBag.Title = "Sorular";
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }

    <div class="page-header row no-gutters py-4">
        <div class="col-6 col-sm-6 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Cevaplanacak Sorular</span>
        </div>
        <div class="col-6 col-sm-6 text-center mb-0 ">
            <a href="@Url.Action("SoruGir","Admin")"><button class="btn btn-primary pull-right">Soru Gir</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">

            <hr />
            @foreach (var question in Model)
            {
                <div class="card card-small card-post mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-10">                        <h5 class="card-title">@question.questiontitle</h5></div>
                            <div class="col-lg-2">@if (question.isaktif == 1)
                            { <h6 style="color:#275e0e">Cevaplanmış</h6>}
                            else { <h6 style="color:#ff0000">Cevaplanmamış</h6>} </div>
                        </div>

                        <p class="card-text text-muted">@question.questioncontent</p>
                    </div>
                    <div class="card-footer border-top d-flex">
                        <div class="card-post__author d-flex">

                            <div class="d-flex flex-column justify-content-center ml-3">
                                <span class="card-post__author-name">@question.UserTable.username @question.UserTable.usersurname </span>
                                <small class="text-muted">@question.questiontime.ToString("dd.MM.yyyy")</small>
                            </div>
                        </div>
                        <div class="my-auto ml-auto">
                            @if (question.isaktif == 2)
                            {
                                <a class="btn btn-sm btn btn-success" href="@Url.Action("AnswerQuestion", "Admin" , new { id = question.id })">
                                    Soruyu Cevapla
                                </a>

                            }

                            <a class="btn btn-sm btn-white" href="@Url.Action("DeleteQuestion", "Admin" , new { id = question.id })" onclick="return confirm('Bu Soruyu Silmek İstediğinize Emin Misiniz?')">
                                <i class="far fa-trash-alt mr-1"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

