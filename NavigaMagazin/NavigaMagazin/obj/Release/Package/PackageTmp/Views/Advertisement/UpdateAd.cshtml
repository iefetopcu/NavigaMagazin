@model NavigaMagazin.Models.Entity.AdvertisingTable

@{
    ViewBag.Title = "Reklam Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="main-content-container container-fluid px-4">

    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle"></span>
            <h3 class="page-title">Reklam Güncelle</h3>
        </div>
    </div>
    @if (ViewBag.ads == "no")
    {
        <div class="alert alert-danger text-center" role="alert">
            <h4 class="alert-heading">Başarısız !</h4><br />
            <p>Aynı formatta en fazla 2 aktif reklam eklenebilir, Bu formatta 2 adet aktif reklam mevcut! </p>

        </div>
    }
    @using (Html.BeginForm("UpdateAd", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-lg-9 col-md-12">
                <div class="card card-small mb-3">
                    <div class="card-body">

                        @Html.TextBoxFor(m => m.advertisingname, new { @class = "form-control form-control-lg mb-3", @maxlength = "65" })
                        @Html.TextBoxFor(m => m.advertisinglink, new { @class = "form-control form-control-lg mb-3", @maxlength = "170" })


                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-12">
                <div class='card card-small mb-3'>
                    <div class="card-header border-bottom">
                        <h6 class="m-0">Detaylar ve Fotoğraf</h6>
                    </div>
                    <div class='card-body p-0'>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item p-3">
                                <span class="d-flex mb-2">
                                    <i class="material-icons mr-1">flag</i>
                                    <strong class="mr-1">Durum </strong>
                                    @Html.DropDownListFor(m => m.isaktif, new List<SelectListItem>
               { new SelectListItem{Text="Aktif", Value="1"},
               new SelectListItem{Text="Pasif", Value="2"}}, new { @class = "ml-auto" })
                                </span>
                                <span class="d-flex mb-2">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <img src="@Model.advertisingphoto" style="width:100%!important; padding:20px;" />
                                        </div>
                                        <div class="col-lg-6">
                                            <strong class="mr-1">Reklam Fotoğrafı<br /> </strong>
                                        </div>
                                        <div class="col-lg-6">
                                            <strong class="ml-1">
                                                <input type="file" name="advertisingphoto" />
                                            </strong>
                                        </div>
                                    </div>


                                </span>

                            </li>

                        </ul>
                    </div>
                </div>
                <div class='card card-small mb-3'>
                    <div class="card-header border-bottom">
                        <h6 class="m-0">Reklam Formatı</h6>
                    </div>
                    <div class='card-body p-0'>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item p-3">
                                <span class="d-flex mb-2">


                                    @if (Model.advertising260x230 == "true")
                                    {


                                        <select name="advertisingformat" class="form-control">
                                            <option value="260x230" selected>260x230</option>
                                            <option value="320x270">320x270</option>
                                            <option value="320x540">320x540</option>
                                            <option value="728x90">728x90</option>
                                            <option value="728x90banner">728x90 Banner</option>
                                        </select>
                                    }

                                    @if (Model.advertising320x270 == "true")
                                    {
                                        <select name="advertisingformat" class="form-control">
                                            <option value="260x230">260x230</option>
                                            <option value="320x270" selected>320x270</option>
                                            <option value="320x540">320x540</option>
                                            <option value="728x90">728x90</option>
                                            <option value="728x90banner">728x90 Banner</option>
                                        </select>
                                    }



                                    @if (Model.advertising320x540 == "true")
                                    {
                                        <select name="advertisingformat" class="form-control">
                                            <option value="260x230">260x230</option>
                                            <option value="320x270">320x270</option>
                                            <option value="320x540" selected>320x540</option>
                                            <option value="728x90">728x90</option>
                                            <option value="728x90banner">728x90 Banner</option>
                                        </select>
                                    }
                                    @if (Model.advertising728x90 == "true")
                                    {
                                        <select name="advertisingformat" class="form-control">
                                            <option value="260x230">260x230</option>
                                            <option value="320x270">320x270</option>
                                            <option value="320x540">320x540</option>
                                            <option value="728x90" selected>728x90</option>
                                            <option value="728x90banner">728x90 Banner</option>
                                        </select>
                                    }
                                    @if (Model.advertising728x90banner == "true")
                                    {
                                        <select name="advertisingformat" class="form-control">
                                            <option value="260x230">260x230</option>
                                            <option value="320x270">320x270</option>
                                            <option value="320x540">320x540</option>
                                            <option value="728x90">728x90</option>
                                            <option value="728x90banner" selected>728x90 Banner</option>
                                        </select>
                                    }
                                    <br /><br />

                                </span>
                                <strong class="mr-1">Sabit Reklam </strong>
                                @if (Model.fixedad == "true")
                                {
                                    <input type="checkbox" name="fixedad" value="true" checked>
                                }
                                else
                                {
                                    <input type="checkbox" name="fixedad" value="true">

                                }
                            </li>
                        </ul>
                    </div>
                </div>
                <div class='card card-small mb-3'>
                    <div class="card-header border-bottom">
                        <h6 class="m-0">Tarih</h6>
                    </div>
                    <div class='card-body p-0'>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item p-3">


                                <span class="d-flex mb-2">
                                    <i class="material-icons mr-1">calendar_today</i>
                                    <strong class="mr-1">Başlangıç Zamanı </strong>
                                    <input type="text" id="datepicker" name="advertisingstart" required="required" class="ml-auto" value="@Model.advertisingstart"><br />
                                </span>
                                <span class="d-flex mb-2">
                                    <i class="material-icons mr-1">calendar_today</i>
                                    <strong class="mr-1">Bitiş Zamanı </strong>
                                    <input type="text" id="datepicker2" name="advertisingend" required="required" class="ml-auto" value="@Model.advertisingend"><br />
                                </span>

                            </li>
                            <li class="list-group-item d-flex px-3">

                                <button class="btn btn-sm btn-accent ml-auto">
                                    <i class="material-icons">file_copy</i> Yayınla
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    }
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: 'yy-mm-dd'
            }).datepicker();
            ;
        });

        $(function () {
            $("#datepicker2").datepicker({
                dateFormat: 'yy-mm-dd'
            }).datepicker();
            ;
        });
    </script>
</div>
