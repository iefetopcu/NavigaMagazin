@model NavigaMagazin.Models.Entity.UserTable

<form action="@Url.Action("UserAdd", "AdminPartial")" method="post" enctype="multipart/form-data" class="form-group">
    <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLabel">Yeni Kullanıcı</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="text" name="username" placeholder="Kullanıcı Adı" required class="form-control" maxlength="25" /><br />
        <input type="text" name="usersurname" placeholder="Kullanıcı Soyadı" required class="form-control" maxlength="25" /><br />
        <input type="email" name="useremail" placeholder="E-Mail Adresi" required class="form-control" maxlength="45" /><br />
        <input type="password" name="userpassword" placeholder="Kullanıcı Şifresi" required class="form-control" maxlength="45" /><br />

        <div class="row">
            <div class="col-lg-4">
                <label>Kullanıcı Rolü Seç</label>
            </div>
            <div class="col-lg-8">
                @Html.DropDownListFor(m => m.userroleid, (List<SelectListItem>)ViewBag.roles, new { @class = "form-control" })
            </div>
        </div>
        <br /><br />



        <div class="row">
            <div class="col-lg-4">
                <label for="exampleFormControlFile1">Kullanıcı Fotoğrafı</label>
            </div>
            <div class="col-lg-8">
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="userphoto" required><br />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <input type="text" name="userfacebook" placeholder="Kullanıcı Facebook Linki" class="form-control" /><br />
                <input type="text" name="usertwitter" placeholder="Kullanıcı Twitter Linki" class="form-control" /><br />
                <input type="text" name="useryoutube" placeholder="Kullanıcı Youtube Linki" class="form-control" /><br />
                <input type="text" name="userlinkedin" placeholder="Kullanıcı Linkedin Linki" class="form-control" /><br />
            </div>
            
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <input type="submit" class="btn btn-primary" value="Ekle" />
    </div>
</form>
