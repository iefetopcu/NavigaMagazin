@using NavigaMagazin.Models.Entity
@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-6 col-sm-6 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Onaylanacak Yorumlar</span>
    </div>
    <div class="col-6 col-sm-6 text-center mb-0 ">    
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        
        <hr />
        @foreach (var comment in Model)
        {          
                <div class="card card-small card-post mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@comment.commenttitle</h5>
                        <p class="card-text text-muted">@comment.commentcontent</p>
                    </div>
                    <div class="card-footer border-top d-flex">
                        <div class="card-post__author d-flex">

                            <div class="d-flex flex-column justify-content-center ml-3">
                                <span class="card-post__author-name">@comment.UserTable.username @comment.UserTable.usersurname </span>
                                <small class="text-muted">@comment.commenttime.ToString("dd.MM.yyyy")</small>
                            </div>
                        </div>
                        <div class="my-auto ml-auto">
                            <a class="btn btn-sm btn btn-success" href="@Url.Action("Approved", "Admin" , new { id = comment.id })">
                                <i class="far fa-thumbs-up mr-1"></i> Yorumu Onayla
                            </a><a class="btn btn-sm btn-white" href="@Url.Action("DeleteComment", "Admin" , new { id = comment.id })" onclick="return confirm('Bu yorumu Silmek İstediğinize Emin Misiniz?')">
                                <i class="far fa-trash-alt mr-1"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>          
        }
    </div>
    
</div>