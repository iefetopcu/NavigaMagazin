@model NavigaMagazin.Models.Entity.calendarTable
@{
    ViewBag.Title = "Etkinlik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row row-m">
        <!-- START MAIN CONTENT -->
        <div class="col-sm-8 col-p  main-content">
            <div class="theiaStickySidebar">
                <div class="post_details_inner">
                    <div class="post_details_block details_block3">
                        <div class="post-header">
                            <ul class="td-category">
                                <li><a class="post-category" href="#">Etkinlik</a></li>

                            </ul>
                            <h2 style="padding-bottom:20px;">@Model.calendartitle</h2>

                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="authar-info">
                                    <li class="date" style="color:#000000!important;"><i class="far fa-clock"></i> <b>Başlangıç Tarihi : </b> @Model.calendestartrdate.Value.ToString("dd.MM.yyyy")</li>
                                    <li class="date" style="color:#000000!important;"><b>Bitiş Tarihi : </b> @Model.calendestartrdate.Value.ToString("dd.MM.yyyy")</li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="authar-info">
                                    <li class="date" style="color:#000000!important;"><i class="fas fa-map-marker-alt"></i> <b>Etkinlik Yeri : </b> @Model.calenderlocation</li>
                                    
                                </ul>
                            </div>
                        </div>
                        <br />

                        @Html.Raw(Model.calendercontent)




                    </div>
                </div>
                <!-- END OF /. MAIN CONTENT -->
                <!-- START SIDE CONTENT -->
                <!-- END OF /. SIDE CONTENT -->
            </div>
        </div>
        @{Html.RenderAction("Sidecontent", "Partial");}
    </div>
</div>

