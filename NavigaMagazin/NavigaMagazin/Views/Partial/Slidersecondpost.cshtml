
@using NavigaMagazin.Models.Entity
@foreach (var vitrin2 in Model)
{
    <div class="slider-post post-height-4">
        <a href="@Url.Action("Oku","Home", new { url = vitrin2.url })" class="news-image"><img src="@vitrin2.postphoto" alt="@vitrin2.posttitle" class="img-responsive"></a>
        <div class="post-text">
            <span class="post-category">@vitrin2.CategoryTable.categoryname</span>
            <h4><a href="@Url.Action("Oku","Home", new { url = vitrin2.url })">@vitrin2.posttitle</a></h4>
            <ul class="authar-info">
                <li class="authar hidden-xs hidden-sm"><a href="#">@vitrin2.UserTable.username @vitrin2.UserTable.usersurname</a></li>
                <li class="hidden-xs">@vitrin2.releasetime.ToString("dd.MM.yyyy")</li>
            </ul>
        </div>
    </div>
}