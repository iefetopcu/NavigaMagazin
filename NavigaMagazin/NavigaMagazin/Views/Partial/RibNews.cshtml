@using NavigaMagazin.Models.Entity

@foreach (var rib in Model)
{

    <div class="col-xs-6 col-sm-6 col-md-6 col-padding">
        <div class="grid-item">
            <div class="grid-item-img">
                <a href="@Url.Action("Oku","Home", new { url = rib.url })">
                    <img src="@rib.postphoto" class="img-responsive" alt="@rib.posttitle">
                    @*<div class="link-icon"><i class="fa fa-camera"></i></div>*@
                </a>
            </div>
            <h5><a href="@Url.Action("Oku","Home", new { url = rib.url })" class="title">@rib.posttitle</a></h5>
            <ul class="authar-info">
                <li>@rib.releasetime.ToString("dd.MM.yyyy")</li>
                <li class="like hidden-sm">@rib.postlike</li>
            </ul>
            <p>@rib.postspottext</p>
        </div>
    </div>

}

