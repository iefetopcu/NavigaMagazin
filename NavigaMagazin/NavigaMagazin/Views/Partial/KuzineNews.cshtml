@using NavigaMagazin.Models.Entity
@foreach (var kuzine in Model)
{

    <div class="col-xs-6 col-sm-6 col-md-6 col-padding">
        <div class="grid-item">
            <div class="grid-item-img">
                <a href="@Url.Action("Oku","Home", new { url = kuzine.url })">
                    <img src="@kuzine.postphoto" class="img-responsive" alt="@kuzine.posttitle">
                    @*<div class="link-icon"><i class="fa fa-camera"></i></div>*@
                </a>
            </div>
            <h5><a href="@Url.Action("Oku","Home", new { url = kuzine.url })" class="title">@kuzine.posttitle</a></h5>
            <ul class="authar-info">
                <li>@kuzine.releasetime.ToString("dd.MM.yyyy")</li>
                <li class="like hidden-sm">@kuzine.postlike</li>
            </ul>
            <p>@kuzine.postspottext</p>
        </div>
    </div>

}




