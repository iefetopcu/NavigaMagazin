@using NavigaMagazin.Models.Entity
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="youtube-wrapper">
                <div class="playlist-title">
                    <h4>Naviga TV</h4>
                </div>
                <div class="container-fluid pb-video-container" style="background-color: #1b1c26;">
                    <div class="col-md-12">
                        
                        <div class="row pb-row" style="padding:20px;">
                            @foreach(var videolist in Model)
            {
                            <div class="col-md-6 pb-video">
                                <iframe class="pb-video-frame" width="100%" height="230" src="@videolist.videolink" frameborder="0" allowfullscreen></iframe>
                                <label class="form-control text-center" style="background-color:#eb0254; color:white;">@videolist.videotitle</label>
                            </div>
            }
                                                   
                        </div>                      
                    </div>
                    <div class="col-md-12" style="margin-bottom:20px;">
                        <div class="col-lg-12 text-right"><a href="" style="color:whitesmoke;">Tümünü Gör</a></div>
                    </div>
                </div>
                <style>


                    .pb-video {
                        border: 1px solid #e6e6e6;
                        padding: 5px;
                    }

                        

                    .pb-video-frame {
                        transition: width 2s, height 2s;
                    }

                        

                    .pb-row {
                        margin-bottom: 10px;
                    }
                </style>
            </div>
        </div>
    </div>
</div>
